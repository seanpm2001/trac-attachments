+wxCoord wxBitmapComboBox::OnMeasureItemWidth(size_t item) const
+{
+    wxCoord x, y;
+    GetTextExtent(GetString(item), &x, &y, 0, 0);
+    x += m_imgAreaWidth;
+    return x;
