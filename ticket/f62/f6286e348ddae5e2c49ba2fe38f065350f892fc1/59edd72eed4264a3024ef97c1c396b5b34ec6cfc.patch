+wxSize wxBitmapComboBox::DoGetBestSize() const
+{
+    wxSize sz = wxOwnerDrawnComboBox::DoGetBestSize();
+
+    // Scale control to match height of highest image.
+    int h2 = m_usedImgSize.y + IMAGE_SPACING_CTRL_VERTICAL;
+
+    if ( h2 > sz.y )
+        sz.y = h2;
+
+    CacheBestSize(sz);
+    return sz;
